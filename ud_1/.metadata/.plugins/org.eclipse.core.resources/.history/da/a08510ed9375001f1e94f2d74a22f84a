/* Muestra varios atributos de un fichero (nombre, ruta, si se puede leer, etc.)
 * Al especificar la ruta en Windows, al poner el carácter \ hay que añadir 
 * el carácter de escape \ por lo que tendré \\
 */

import java.io.*;

public class UD1_VerInf {
public static void main(String[] args) {
  System.out.println("INFORMACIÓN SOBRE EL FICHERO:");
  File f = new File("E:\\Mis_documentos\\_Curso 2021-22\\486-Acceso a datos\\miAccesoaDatos\\UD1 - Manejo de ficheros\\Proyectos UD1\\UD1_VerInf\\src\\UD1_VerInf.java");  
  if(f.exists()){
        System.out.println("Nombre del fichero  : "+f.getName());
        System.out.println("Ruta                : "+f.getPath());
        System.out.println("Ruta absoluta       : "+f.getAbsolutePath());
        System.out.println("Se puede leer       : "+f.canRead());
        System.out.println("Se puede escribir   : "+f.canWrite());
        System.out.println("Tamaño              : "+f.length());
		System.out.println("Es un directorio    : "+f.isDirectory()); 
		System.out.println("Es un fichero       : "+f.isFile());
		System.out.println("Nombre del directorio padre: "+f.getParent());
  }
 }
}
