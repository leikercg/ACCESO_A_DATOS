/* Lee líneas completas de texto y las muestra en pantalla.
 * Se debe incluir en bloque try-catch.
 */

import java.io.*;

public class UD1_EscribirFichTextoBuf {
  public static void main(String[] args) {
  try{      
      BufferedWriter fichero = new BufferedWriter (new FileWriter("FichTexto1.txt"));
      for (int i=1; i<11; i++){
	    fichero.write("Fila numero: "+i); //escribe una línea
	    fichero.newLine(); //escribe un salto de línea
      }
      fichero.close(); 
      }
	catch (FileNotFoundException fn ){                      
               System.out.println("No se encuentra el fichero");}
	catch (IOException io) {
               System.out.println("Error de E/S ");}
  }
}
